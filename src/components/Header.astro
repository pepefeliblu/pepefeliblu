---
import ThemeToggle from "./ThemeToggle.astro";
---

<header>
  <nav class="container">
    <a href="/pepefeliblu/" class="logo">
      dev.rueda
      <img
        src="/pepefeliblu/images/site/xmas/xmas_hat.webp"
        alt="Christmas Hat"
        class="christmas-hat"
      />
    </a>
    <div class="links">
      <a href="/pepefeliblu/">Home</a>
      <a href="/pepefeliblu/about">About</a>
      <a href="/pepefeliblu/cv">CV</a>
      <ThemeToggle />
    </div>
  </nav>
</header>

<style>
  header {
    border-bottom: 1px solid var(--color-border);
    padding: 1rem 0;
  }
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo {
    font-weight: 700;
    font-size: 1.2rem;
    color: var(--color-text-primary);
    text-decoration: none;
    border-bottom: none;
  }
  .links {
    display: flex;
    align-items: center;
  }
  .links a {
    margin-left: 1.5rem;
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    border-bottom: none;
  }
  .links a:hover,
  .links a.active {
    color: var(--color-accent);
    border-bottom: 2px solid var(--color-accent);
  }

  /* Christmas Mode Styles */
  .logo {
    position: relative;
    display: inline-block;
  }
  .christmas-hat {
    display: none;
    position: absolute;
    top: 5px;
    right: -10px;
    width: 18px;
    height: auto;
    transform: rotate(43deg);
    pointer-events: none;
  }
  :global(.christmas-mode) .christmas-hat {
    display: block;
  }
</style>

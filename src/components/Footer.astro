---
const today = new Date();
import { Github, Linkedin, Rss } from "lucide-astro";
import { version } from "../../package.json";
---

<footer>
  <div class="container">
    <p>&copy; {today.getFullYear()} pepefeliblu. All rights reserved.</p>
    <div class="socials">
      <span class="version">v{version}</span>
      <a
        href="https://github.com/pepefeliblu"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub"
      >
        <Github size={20} />
      </a>
      <a
        href="https://www.linkedin.com/in/dev-rueda/"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="LinkedIn"
      >
        <Linkedin size={20} />
      </a>
      <a href="/pepefeliblu/rss.xml" target="_blank" aria-label="RSS Feed">
        <Rss size={20} />
      </a>
    </div>
  </div>
</footer>

<style>
  footer {
    border-top: 1px solid var(--color-border);
    padding: 2rem 0;
    margin-top: auto;
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .socials {
    display: flex;
    align-items: center;
  }
  .version {
    font-size: 0.8rem;
    color: var(--color-text-secondary);
    opacity: 0.7;
    margin-right: 0.5rem;
  }
  .socials a {
    margin-left: 1rem;
    color: var(--color-text-secondary);
    border-bottom: 2px solid transparent; /* Reserve space */
  }
  .socials a:hover {
    color: var(--color-accent);
    border-color: var(--color-accent);
  }
</style>

<style>
    .cv-controls {
        margin-bottom: 2rem;
        text-align: right;
    }
    .btn-print {
        background-color: var(--color-accent);
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        cursor: pointer;
        font-family: var(--font-sans);
        font-weight: 500;
        font-size: 0.9rem;
        transition: opacity 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    .btn-print:hover {
        opacity: 0.9;
    }

    .cv-content h1 {
        margin-bottom: 0.2rem;
        color: var(--color-text-primary);
    }
    .cv-content h3 {
        margin-top: 0;
        font-weight: 400;
        color: var(--color-text-secondary);
        margin-bottom: 1.5rem;
    }

    .contact-info {
        font-size: 0.9rem;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px dashed var(--color-dot);
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 0.5rem;
        color: var(--color-text-secondary);
    }

    .contact-item {
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
    }

    .contact-row-2 {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        width: 100%;
        margin-top: 0.2rem;
    }

    .separator {
        color: inherit;
    }

    .contact-link {
        color: inherit;
        border-bottom: 2px solid transparent;
        transition: all 0.2s ease;
    }
    .contact-link:hover {
        color: var(--color-accent);
        border-color: var(--color-accent);
    }

    /* Print Specific Styles in Global CSS will handle the rest */
</style>
